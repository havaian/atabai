# Development Environment Configuration
# Copy this file to .env for local development

PROJECT_NAME=atabai

# PORTS AND NETWORK CONFIGURATION
REDIS_EXPOSE=127.0.0.1:7779
REDIS_PORT=7779

BACKEND_EXPOSE=127.0.0.1:7770
BACKEND_PORT=7770

FRONTEND_EXPOSE=127.0.0.1:7777
FRONTEND_DEV_PORT=7777
FRONTEND_PROD_PORT=80

NGINX_EXPOSE=127.0.0.1:80
NGINX_PORT=80

PROMETHEUS_EXPOSE=127.0.0.1:7778
PROMETHEUS_PORT=9090

GRAFANA_EXPOSE=127.0.0.1:7771
GRAFANA_PORT=3000

# APPLICATION CONFIGURATION
NODE_ENV=development
PORT=3000

# DATABASE CONFIGURATION
MONGO_DATABASE=aitable_dev
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=dev_password_123

# JWT CONFIGURATION
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# REDIS CONFIGURATION
REDIS_PASSWORD=dev_redis_password_123

# RABBITMQ CONFIGURATION
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=dev_rabbitmq_password_123

# GOOGLE OAUTH CONFIGURATION (You need to get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# EMAIL CONFIGURATION (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@ai-table.com

# FRONTEND CONFIGURATION
VUE_APP_TITLE="ATABAI"
VUE_APP_DESCRIPTION="Excel Automation Platform for IFRS"
FRONTEND_URL=http://localhost:8080

# VITE FRONTEND ENVIRONMENT VARIABLES
VITE_API_BASE_URL=http://localhost:3000/api
VITE_APP_TITLE="ATABAI"
VITE_APP_DESCRIPTION="Excel Automation Platform for IFRS"
VITE_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}

# FILE UPLOAD CONFIGURATION
MAX_FILE_SIZE_BASIC=52428800    # 50MB in bytes
MAX_FILE_SIZE_PREMIUM=209715200 # 200MB in bytes
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# STRIPE CONFIGURATION (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_CURRENCY=uzs

# MONITORING & LOGGING
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=dev_admin_password

# SECURITY CONFIGURATION
CORS_ORIGIN=http://localhost:8080,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000     # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=dev_session_secret_change_in_production

# EXCEL PROCESSING CONFIGURATION
EXCEL_PROCESSING_TIMEOUT=300000 # 5 minutes
MAX_ROWS=100000
MAX_COLUMNS=500
WORKER_PROCESSES=2

# CACHE CONFIGURATION
CACHE_TTL=3600                  # 1 hour
TEMPLATE_CACHE_TTL=86400        # 24 hours

# DEVELOPMENT FLAGS
DEBUG=true
ENABLE_API_DOCS=true
ENABLE_CORS=true
TRUST_PROXY=true

# EXTERNAL SERVICES
OPENAI_API_KEY=your_openai_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_DOMAIN=https://your-domain.com

# WEBRTC CONFIGURATION (for future real-time features)
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=username
TURN_CREDENTIAL=password

# DATABASE BACKUP CONFIGURATION
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"     # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# FEATURE FLAGS
ENABLE_PREMIUM_FEATURES=true
ENABLE_API_ACCESS=true
ENABLE_BATCH_PROCESSING=false
ENABLE_AI_ASSISTANT=false

# LOCALIZATION
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,uz,en

# ANALYTICS
ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ERROR REPORTING
SENTRY_DSN=
ENABLE_ERROR_REPORTING=false

# PERFORMANCE MONITORING
ENABLE_APM=false
NEW_RELIC_LICENSE_KEY=

# DEVELOPMENT TOOLS
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_SWAGGER_UI=true
HOT_RELOAD=true
